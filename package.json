{
  "name": "ttr-calculator-typescript",
  "version": "1.0.18",
  "description": "A calculator for the table tennis rating written in TypeScript.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write \"./**/*.{js,json,md,ts,yaml,yml}\"",
    "lint": "oxlint --fix --deny-warnings",
    "test": "vitest run",
    "clean": "rimraf dist",
    "build": "tsc",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luth1um/ttr-calculator-typescript.git"
  },
  "keywords": [
    "table tennis",
    "rating"
  ],
  "author": "luthium",
  "license": "MIT",
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxlint": "1.36.0",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "oxlint --fix --deny-warnings"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  }
}
