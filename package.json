{
  "name": "ttr-calculator-typescript",
  "version": "1.0.13",
  "description": "A calculator for the table tennis rating written in TypeScript.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --fix --max-warnings 0",
    "format": "prettier --write \"./**/*.{js,json,md,ts,yaml,yml}\"",
    "test": "jest",
    "clean": "rimraf dist",
    "prebuild": "yarn clean && yarn lint",
    "build": "tsc",
    "postbuild": "yarn test",
    "preversion": "yarn build",
    "postversion": "git push --follow-tags",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luth1um/ttr-calculator-typescript.git"
  },
  "keywords": [
    "table tennis",
    "rating"
  ],
  "author": "luthium",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.24.0",
    "@types/jest": "29.5.14",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "ts-jest": "29.3.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.30.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  }
}
