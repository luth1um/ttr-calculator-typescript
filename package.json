{
  "name": "ttr-calculator-typescript",
  "version": "1.0.16",
  "description": "A calculator for the table tennis rating written in TypeScript.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --fix --max-warnings 0",
    "format": "prettier --write \"./**/*.{js,json,md,ts,yaml,yml}\"",
    "test": "jest",
    "clean": "rimraf dist",
    "build": "tsc",
    "preversion": "pnpm clean && pnpm build",
    "postversion": "git push --follow-tags",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luth1um/ttr-calculator-typescript.git"
  },
  "keywords": [
    "table tennis",
    "rating"
  ],
  "author": "luthium",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/jest": "30.0.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
